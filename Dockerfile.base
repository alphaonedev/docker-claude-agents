FROM node:22-slim

# Install git and essential tools for Claude to function
RUN apt-get update && apt-get install -y \
    git \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code globally
RUN npm install -g @anthropic-ai/claude-code

# Create a workspace
WORKDIR /app

# Required: Claude needs a home directory to store its auth/config
RUN mkdir -p /home/node/.claude && chown -R node:node /home/node /app

USER node

# Default command for unattended operation
ENTRYPOINT ["claude"]
CMD ["--dangerously-skip-permissions"]
